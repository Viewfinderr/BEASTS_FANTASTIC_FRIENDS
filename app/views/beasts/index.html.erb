<div class="container mt-3">
  <div class="cards">
    <% @beasts.each do |beast| %>
        <%= link_to beast_path(beast), class: "text-decoration-none" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path beast.photos.first.key, crop: :fill %>)" >
          </div>
          <div class="card-beast">
            <div class="card-beast-infos ">
              <div>
                <h2><%= beast.race %></h2>
                <% beast.tags.each do |tag| %>
                <%= tag %>
                <% end %>
              </div>
              <div class="beast-info-reverse">
                <h2 class="card-beast-pricing text-decoration-none">Â£<%= beast.price_per_day %></h2>
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-beast-user avatar-bordered" />
              </div>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

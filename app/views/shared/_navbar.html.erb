<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://i.pinimg.com/originals/c9/b5/49/c9b5498ecddc21fd2c8bcbb8950458a1.png" %>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
        <li>
          <%= form_with url: beasts_path, method: :get, class: "d-flex mt-3 m-3" do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find your Beast"
            %>
           <%= submit_tag "Search", class: "btn btn-secondary" %>
          <% end %>
        </li>
          <li class="nav-item active me-3 mt-4">
            <%= link_to "View Beasts", beasts_path, class: "shadow__btn"  %>
          </li>
          <li class="nav-item active me-3 mt-4">
            <%= link_to "Add your Beast",  new_beast_path, class: "shadow__btn"  %>
          <li class="nav-item active me-3 mt-4">
            <%= link_to "Dashboard", dashboard_path, class: "shadow__btn"  %>
          </li>
          <li class="nav-item dropdown mt-3 ">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag "https://cdn-icons-png.flaticon.com/512/8090/8090406.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Create account",  new_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Sign Up", new_user_session_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item active me-3 mt-4">
            <%= link_to "Login", new_user_session_path, class: "shadow__btn" %>
          </li>
          <li class="nav-item active me-3 mt-4">
            <%= link_to "View Beasts", beasts_path, class: "shadow__btn"  %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
